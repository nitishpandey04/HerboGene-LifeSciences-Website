# ===========================================
# HerboGene LifeSciences E-Commerce Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# SUPABASE
# ===========================================
# Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# RAZORPAY
# ===========================================
# Get these from Razorpay Dashboard -> Settings -> API Keys
# Use test keys for development, live keys for production
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-key-secret-here

# Get this from Razorpay Dashboard -> Webhooks
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret-here

# ===========================================
# RESEND (Email)
# ===========================================
# Get this from Resend Dashboard -> API Keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxx

# From email address (must be verified in Resend or use onboarding@resend.dev for testing)
EMAIL_FROM=orders@herbogene.com

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================
# Generate a secure random string (at least 32 characters)
# You can use: openssl rand -base64 32
ADMIN_JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# ===========================================
# APP CONFIGURATION
# ===========================================
# Your website URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For production, use your actual domain:
# NEXT_PUBLIC_APP_URL=https://herbogene.com
